<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/sy_vffffff" android:layout_width="match_parent" android:layout_height="44dp">
        <FrameLayout android:id="@+id/sy_fl_trip_list_back" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="match_parent">
            <ImageView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/sy_ic_back"/>
        </FrameLayout>
        <TextView android:textSize="18sp" android:textColor="@color/sy_v222222" android:gravity="center" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/sy_str_my_trip" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <com.zhuanche.commonbase.widget.tablayout.MagicTabLayout android:id="@+id/sy_trip_list_tab_layout" android:background="@color/sy_white" android:layout_width="match_parent" android:layout_height="44dp"/>
    <FrameLayout android:id="@+id/sy_fl_trip_list_container" android:layout_width="match_parent" android:layout_height="match_parent"/>
</LinearLayout>
