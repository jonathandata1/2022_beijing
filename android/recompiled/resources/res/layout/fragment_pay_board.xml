<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:background="@color/white" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingLeft="@dimen/dimen_16" android:paddingTop="@dimen/dimen_24" android:paddingRight="@dimen/dimen_16" android:paddingBottom="@dimen/dimen_20" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_current_pay_plan" android:background="@drawable/bg_pay_space_1g" android:paddingLeft="@dimen/dimen_20" android:paddingTop="@dimen/dimen_10" android:paddingRight="@dimen/dimen_20" android:paddingBottom="@dimen/dimen_10" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_12">
                <TextView android:textSize="36dp" android:textColor="#ffffffff" android:id="@+id/txt_cur_capacity" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1GB"/>
                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_4">
                    <TextView android:textSize="@dimen/dimen_12" android:textColor="#ffffffff" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="金额"/>
                    <TextView android:textSize="@dimen/dimen_12" android:textColor="#ffffffff" android:id="@+id/txt_cur_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dimen_10" android:text="¥10.00/月"/>
                </LinearLayout>
                <TextView android:textSize="@dimen/dimen_12" android:textColor="#ffffffff" android:id="@+id/txt_cur_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_8" android:text="适用于文本信息过多的用户"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/dimen_17" android:textColor="#ff383838" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dimen_20" android:text="选择支付方式"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_pay_board_list" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:background="@drawable/bg_gray_strock_without_corner" android:paddingLeft="@dimen/dimen_16" android:paddingTop="@dimen/dimen_10" android:paddingRight="@dimen/dimen_16" android:paddingBottom="@dimen/dimen_10" android:layout_width="match_parent" android:layout_height="64dp">
        <TextView android:textColor="@color/white" android:gravity="center" android:background="@drawable/bg_blue_corner" android:layout_width="match_parent" android:layout_height="44dp" android:text="微信支付"/>
    </LinearLayout>
</LinearLayout>
