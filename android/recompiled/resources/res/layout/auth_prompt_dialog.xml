<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="18dp" android:layout_marginRight="18dp" android:layout_centerInParent="true">
        <LinearLayout android:orientation="vertical" android:background="@drawable/dialog_authprompt_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#222222" android:layout_gravity="center_horizontal" android:id="@+id/tv_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:text="@string/authprompt_uncheckcard_title"/>
            <TextView android:textSize="15dp" android:textColor="#8e8e93" android:layout_gravity="center_horizontal" android:id="@+id/tv_dialog_subtitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/authprompt_uncheckcard_subtitle"/>
            <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="vertical" android:id="@+id/ll_L2_tip" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_auth_icon" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="19dp" android:src="@drawable/authprompt_icon"/>
                <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginTop="16dp">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/auth_safe_icon"/>
                        <TextView android:textSize="12dp" android:textColor="#a3a3a3" android:layout_gravity="center_horizontal" android:id="@+id/tv_safe" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/safe"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="43dp" android:layout_marginRight="43dp">
                        <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/auth_speedy_icon"/>
                        <TextView android:textSize="12dp" android:textColor="#a3a3a3" android:layout_gravity="center_horizontal" android:id="@+id/tv_convenience" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/convenience"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/auth_exclusive_icon"/>
                        <TextView android:textSize="12dp" android:textColor="#a3a3a3" android:layout_gravity="center_horizontal" android:id="@+id/tv_only_have" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="@string/only_have"/>
                    </LinearLayout>
                </LinearLayout>
                <View android:background="#dddee3" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="30dp"/>
                <TextView android:textSize="17dp" android:textColor="#222222" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_authentication" android:layout_width="match_parent" android:layout_height="50dp" android:text="@string/verify_now"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/ll_L3_tip" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content">
                <View android:background="#dddee3" android:layout_width="match_parent" android:layout_height="0.7dp" android:layout_marginTop="20dp"/>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rl_checkface" android:background="@drawable/layout_selector_auth_prompt_dialog" android:paddingLeft="15dp" android:paddingRight="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="88dp">
                    <ImageView android:id="@+id/iv_checkface_icon" android:layout_width="56.3dp" android:layout_height="56.3dp" android:src="@drawable/auth_leveltwo_checkface_icon"/>
                    <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:layout_weight="1">
                        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffbc00" android:id="@+id/tv_checkface_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="@string/haixin_title"/>
                        <TextView android:textSize="13sp" android:textColor="#8e8e93" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/open_camera"/>
                    </LinearLayout>
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_right"/>
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rl_bankcard" android:background="@drawable/layout_selector_auth_prompt_dialog" android:paddingLeft="15dp" android:paddingRight="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="83dp" android:layout_marginBottom="61dp">
                    <ImageView android:id="@+id/iv_bankcard_icon" android:layout_width="56.3dp" android:layout_height="56.3dp" android:src="@drawable/auth_leveltwo_bankcard_icon"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_weight="1">
                        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#ffbc00" android:id="@+id/tv_l1_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="2dp" android:text="@string/card_verify_title"/>
                        <TextView android:textSize="13sp" android:textColor="#8e8e93" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/card_verify_title_hint"/>
                    </LinearLayout>
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_cancel" android:layout_width="29dp" android:layout_height="29dp" android:layout_marginTop="30dp" android:src="@drawable/auth_prompt_close"/>
    </LinearLayout>
</RelativeLayout>
