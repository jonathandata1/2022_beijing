<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="70dp">
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:id="@+id/flag_icon" android:layout_width="50dp" android:layout_height="50dp" android:src="0x7f0807ae"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="4">
            <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <TextView android:id="@+id/name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="张三"/>
                <TextView android:id="@+id/address" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:text="悦龙湾小区22-11-10"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="缴费单号："/>
                <TextView android:id="@+id/number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="123456789"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:layout_gravity="center" android:id="@+id/select_icon" android:layout_width="50dp" android:layout_height="50dp" android:src="0x7f08020c"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:background="@color/ccbpay_gray" android:layout_width="match_parent" android:layout_height="1dp"/>
</LinearLayout>
