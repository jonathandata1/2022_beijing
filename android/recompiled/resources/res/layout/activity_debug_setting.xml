<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <Switch android:id="@+id/switchFuncPerformance" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="关闭函数性能日志收集"/>
    <View android:background="@color/black" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="#000000" android:layout_width="0dp" android:layout_height="wrap_content" android:text="函数性能日志db取样阀值(ms)" android:layout_weight="1"/>
        <EditText android:id="@+id/editTextDbValue" android:longClickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ems="4" android:inputType="numberSigned"/>
    </LinearLayout>
    <View android:background="@color/black" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textColor="#000000" android:layout_width="0dp" android:layout_height="wrap_content" android:text="函数性能日志bugly取样阀值(ms)" android:layout_weight="1"/>
        <EditText android:id="@+id/editTextBuglyValue" android:longClickable="false" android:layout_width="wrap_content" android:layout_height="wrap_content" android:ems="4" android:inputType="numberSigned"/>
    </LinearLayout>
    <View android:background="@color/black" android:layout_width="match_parent" android:layout_height="1px"/>
    <LinearLayout android:orientation="horizontal" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RadioGroup android:orientation="horizontal" android:id="@+id/radioGroup" android:layout_width="match_parent" android:layout_height="match_parent">
            <RadioButton android:id="@+id/radioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="连点2次进后门" android:layout_weight="1"/>
            <RadioButton android:id="@+id/radioButton2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="连点10次进后门" android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
