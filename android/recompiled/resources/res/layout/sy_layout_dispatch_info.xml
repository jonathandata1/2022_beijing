<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/sy_layout_dispatch_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:paddingTop="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
            <ImageView android:layout_width="28dp" android:layout_height="28dp" android:layout_marginRight="8dp" android:src="@drawable/sy_dispatch_driver_icon"/>
            <TextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/sy_v4a4a4a" android:id="@+id/sy_tv_dispath_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/sy_str_dispatch_title"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/sy_ll_dispath_first_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:minHeight="48dp">
            <ImageView android:layout_width="7dp" android:layout_height="7dp" android:src="@drawable/base_dot_d4d4d8_7" android:scaleType="centerInside"/>
            <TextView android:textSize="15sp" android:textColor="@color/sy_v222222" android:ellipsize="end" android:id="@+id/sy_tv_dispath_title_first" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/sy_ll_dispath_second_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:minHeight="48dp">
            <ImageView android:layout_width="7dp" android:layout_height="7dp" android:src="@drawable/base_dot_red_7" android:scaleType="centerInside"/>
            <TextView android:textSize="15sp" android:textColor="@color/sy_v222222" android:ellipsize="end" android:id="@+id/sy_tv_dispath_title_second" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/sy_ll_dispath_third_content" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:minHeight="48dp">
            <ImageView android:layout_width="7dp" android:layout_height="7dp" android:src="@drawable/base_dot_222222_7" android:scaleType="centerInside"/>
            <TextView android:textSize="15sp" android:textColor="@color/sy_v222222" android:ellipsize="end" android:id="@+id/sy_tv_dispath_title_third" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:singleLine="true"/>
        </LinearLayout>
        <View android:background="@color/v19000000" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
        <Button android:textSize="12sp" android:textColor="@color/sy_v4a4a4a" android:id="@+id/sy_btn_cancel_order" android:background="@drawable/sy_null_drawable" android:layout_width="match_parent" android:layout_height="50dp" android:text="@string/sy_str_booking_cancel_trip" android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
