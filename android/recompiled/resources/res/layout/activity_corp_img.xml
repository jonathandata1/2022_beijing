<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="#20000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/crop_handler_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:id="@+id/crop_handler_img" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <com.systoon.toonauth.authentication.view.widget.ClipImageBorderView android:id="@+id/clip_view" android:layout_width="match_parent" android:layout_height="match_parent"/>
        <ImageView android:id="@+id/crop_handler_select" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout android:background="#20000000" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="17dp" android:textColor="@android:color/white" android:id="@+id/tv_clip_goback" android:paddingLeft="16.5dp" android:paddingBottom="23dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/back" android:layout_alignParentBottom="true"/>
        <TextView android:textSize="17dp" android:textColor="@android:color/white" android:id="@+id/corp_handle_btn" android:paddingRight="16.5dp" android:paddingBottom="23dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/use_photo" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
