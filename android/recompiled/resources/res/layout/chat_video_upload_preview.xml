<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.msgseal.chat.customviews.ChatVideoPlayView android:id="@+id/video_preview" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:orientation="horizontal" android:id="@+id/video_preview_bottom_bar" android:layout_width="match_parent" android:layout_height="62dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="@dimen/dimen_15" android:textColor="@color/c20" android:id="@+id/video_preview_process" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/chat_video_preview_status_process" android:layout_centerHorizontal="true"/>
        <ImageView android:id="@+id/video_preview_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:src="@drawable/close_cricle" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
        <ProgressBar android:id="@+id/video_preview_progress" android:layout_width="match_parent" android:layout_height="5dp" android:max="100" android:progress="0" android:progressDrawable="@drawable/file_progress_background" android:layout_toLeftOf="@+id/video_preview_close" android:layout_centerVertical="true" style="?android:attr/progressBarStyleHorizontal"/>
        <TextView android:textSize="@dimen/dimen_17" android:textColor="@color/c20" android:gravity="center" android:id="@+id/video_preview_resend" android:background="@drawable/bg_blue_corner" android:visibility="gone" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/chat_file_continue_upload" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
