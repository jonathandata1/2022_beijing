<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/layout_Text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/layout_Text" android:layout_centerVertical="true">
            <ImageView android:layout_gravity="center" android:id="@+id/imgCycle" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:src="@drawable/kf_ic_cycle"/>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
