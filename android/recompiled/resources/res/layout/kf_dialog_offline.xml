<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/offline_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/maincolor" android:layout_width="match_parent" android:layout_height="48dp">
        <ImageView android:id="@+id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:src="@drawable/kf_ic_arrow_left" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="20sp" android:textColor="@color/all_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="离线留言" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView android:textSize="18sp" android:textColor="@color/all_black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="请留言,我们将尽快联系您!"/>
    <EditText android:gravity="top" android:id="@+id/id_et_content" android:background="@drawable/kf_offlinedialog_et_bg" android:paddingLeft="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:layout_marginRight="16dp" android:layout_marginBottom="8dp" android:hint="请留言~" android:maxLines="6" android:minLines="6"/>
    <TextView android:textSize="18sp" android:textColor="@color/all_black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="请务必留下您的联系方式,方便我们联系您"/>
    <EditText android:id="@+id/id_et_phone" android:background="@drawable/kf_offlinedialog_et_bg" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:layout_marginRight="16dp" android:layout_marginBottom="4dp" android:hint="输入手机号" android:maxLines="1" android:minLines="1" android:inputType="phone"/>
    <EditText android:id="@+id/id_et_email" android:background="@drawable/kf_offlinedialog_et_bg" android:padding="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="4dp" android:layout_marginRight="16dp" android:layout_marginBottom="4dp" android:hint="输入邮箱号" android:maxLines="1" android:minLines="1" android:inputType="textEmailAddress"/>
    <Button android:textSize="18sp" android:textColor="@color/all_white" android:id="@+id/id_btn_submit" android:background="@color/maincolor" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="16dp" android:text="提交留言"/>
</LinearLayout>
