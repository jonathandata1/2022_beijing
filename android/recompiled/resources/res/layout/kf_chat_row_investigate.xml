<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:padding="6dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:textSize="10sp" android:gravity="center" android:id="@+id/chatting_time_tv" android:background="@color/lightgrey" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="2dp" android:layout_centerHorizontal="true"/>
    <RelativeLayout android:background="@drawable/kf_coner_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_below="@+id/chatting_time_tv">
        <TextView android:textSize="16sp" android:textColor="@color/grey" android:id="@+id/tv" android:padding="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="请您对本次服务做出评价, 点击对应选项即可完成评价"/>
        <View android:id="@+id/vi" android:background="@color/grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_margin="2dp" android:layout_below="@+id/tv"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/chat_investigate_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/vi"/>
    </RelativeLayout>
</RelativeLayout>
