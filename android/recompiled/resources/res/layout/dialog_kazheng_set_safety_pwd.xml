<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/dialog_kazheng_set_safety_pwd_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="18dp" android:textStyle="bold" android:textColor="#222222" android:id="@+id/dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="37dp" android:text="@string/set_safe_pwd_title" android:layout_centerHorizontal="true"/>
    <ImageView android:id="@+id/dialog_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:src="@drawable/dialog_kazheng_set_safety_pwd_img" android:layout_below="@+id/dialog_title" android:layout_centerHorizontal="true"/>
    <TextView android:textSize="13dp" android:textColor="#8e8e93" android:gravity="center" android:id="@+id/dialog_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="24dp" android:layout_marginTop="20dp" android:layout_marginRight="24dp" android:text="@string/auth_tip" android:layout_below="@+id/dialog_img"/>
    <ImageView android:id="@+id/dialog_line" android:background="#dddee3" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginTop="19dp" android:layout_below="@+id/dialog_content"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="14dp" android:layout_marginBottom="15dp" android:weightSum="2" android:layout_below="@+id/dialog_line">
        <TextView android:textSize="17dp" android:textColor="#222222" android:gravity="center" android:id="@+id/dialog_goback" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/cancel" android:layout_weight="1"/>
        <ImageView android:id="@+id/dialog_vertical_line" android:background="#dddee3" android:layout_width="0.5dp" android:layout_height="match_parent"/>
        <TextView android:textSize="17dp" android:textColor="#df3031" android:gravity="center" android:id="@+id/dialog_ok" android:layout_width="match_parent" android:layout_height="40dp" android:text="@string/set_safe_pwd" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
