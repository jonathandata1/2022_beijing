            <ImageView android:id="@+id/weater_icon" android:layout_width="@dimen/hp_px_20" android:layout_height="@dimen/hp_px_20" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/hp_px_14" android:textColor="@color/color_FFFFFF" android:id="@+id/weather_describe" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/hp_px_1" android:maxLines="1" android:singleLine="true" android:layout_toRightOf="@+id/weater_icon" android:layout_centerVertical="true"/>
