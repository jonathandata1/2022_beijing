<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_centerInParent="true">
        <LinearLayout android:orientation="vertical" android:background="@drawable/dialog_authprompt_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="18dp" android:textColor="#222222" android:layout_gravity="center_horizontal" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/please_choose_verify"/>
            <View android:background="#dddee3" android:layout_width="match_parent" android:layout_height="0.7dp" android:layout_marginTop="20dp"/>
            <RelativeLayout android:id="@+id/rl_checkface" android:background="@drawable/layout_selector_auth_prompt_dialog" android:paddingLeft="15dp" android:paddingRight="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="88dp">
                <ImageView android:id="@+id/iv_checkface_icon" android:layout_width="65dp" android:layout_height="65dp" android:layout_marginLeft="3.5dp" android:layout_marginTop="2.8dp" android:layout_marginBottom="2dp" android:src="@drawable/auth_leveltwo_checkface_icon" android:layout_centerVertical="true"/>
                <TextView android:textSize="18dp" android:textColor="#ffbc00" android:id="@+id/tv_checkface_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/haixin_title" android:layout_toRightOf="@+id/iv_checkface_icon" android:layout_alignTop="@+id/iv_checkface_icon"/>
                <TextView android:textSize="14dp" android:textColor="#8e8e93" android:layout_width="141dp" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="1dp" android:text="@string/open_camera" android:layout_toRightOf="@+id/iv_checkface_icon" android:layout_below="@+id/tv_checkface_title"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/rl_bankcard" android:background="@drawable/layout_selector_auth_prompt_dialog" android:paddingLeft="15dp" android:paddingRight="15dp" android:clickable="true" android:layout_width="match_parent" android:layout_height="88dp" android:layout_marginTop="10dp" android:layout_marginBottom="61dp">
                <ImageView android:id="@+id/iv_bankcard_icon" android:layout_width="65dp" android:layout_height="65dp" android:layout_marginLeft="3.5dp" android:layout_marginTop="2.8dp" android:layout_marginBottom="2dp" android:src="@drawable/auth_leveltwo_bankcard_icon" android:layout_centerVertical="true"/>
                <TextView android:textSize="18dp" android:textColor="#ffbc00" android:id="@+id/tv_l1_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:text="@string/card_verify_title" android:layout_toRightOf="@+id/iv_bankcard_icon" android:layout_alignTop="@+id/iv_bankcard_icon"/>
                <TextView android:textSize="14dp" android:textColor="#8e8e93" android:layout_width="141dp" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="1dp" android:text="@string/card_verify_title_hint" android:layout_toRightOf="@+id/iv_bankcard_icon" android:layout_below="@+id/tv_l1_title"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_arrow_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView android:textColor="#000000" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/tv_cancel" android:layout_width="29dp" android:layout_height="29dp" android:layout_marginTop="30dp" android:src="@drawable/auth_prompt_close"/>
    </LinearLayout>
</RelativeLayout>
