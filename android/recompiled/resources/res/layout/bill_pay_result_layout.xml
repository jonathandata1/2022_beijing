<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginTop="150dp">
        <ImageView android:id="@+id/result_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerInside"/>
    </LinearLayout>
    <TextView android:textSize="62px" android:textColor="#000" android:gravity="center" android:id="@+id/pay_result" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=""/>
    <TextView android:textSize="36px" android:textColor="#999" android:gravity="center" android:id="@+id/message_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:text=""/>
    <LinearLayout android:gravity="bottom" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
        <Button android:textColor="@color/white" android:id="@+id/next" android:background="@drawable/btn_shap" android:layout_width="0dp" android:layout_height="50dp" android:layout_margin="8dp" android:text="完成" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
